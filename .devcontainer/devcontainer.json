{
  "name": "Python Project",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installJupyterlab": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "./.venv/bin/python"
      }
    }
  },
  "postCreateCommand": "python -m venv .venv && ./.venv/bin/pip install ipython rich && ./.venv/bin/pip install -r requirements.txt || true"
}